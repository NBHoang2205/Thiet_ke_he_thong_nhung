#ifndef INC_MOTOR_H_
#define INC_MOTOR_H_

#include "stm32f1xx_hal.h"
typedef struct
{
	TIM_HandleTypeDef* 	Timer;
	uint32_t 			Channel;
	uint32_t 			frequency
	uint8_t 			duty;
	uint16_t 			speed;

}Motor_Name;

void Motor_Init(Motor_Name* Motor, TIM_HandleTypeDef* Timer, uint32_t Channel);


#endif /* INC_MOTOR_H_ */
